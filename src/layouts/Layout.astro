---
import Header from "../components/Header.astro";
import { ViewTransitions } from "astro:transitions";

interface Props {
	title?: string;
	description?: string;
	image?: string;
}

const {
	title = "Global Lawn Bowls",
	description = "Innovating Lawn Bowls with cutting-edge technology through advanced scoring, tournament management, and data analytics solutions.",
	image = "/lawn bowls.gif",
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta property="og:image" content={image} />
		<ViewTransitions />
		<title>{title}</title>
	</head>
	<body class="min-h-screen grid grid-rows-[auto,1fr,auto]">
		<Header />
		<slot />
	</body>
</html>

<style is:global>
	@tailwind base;
	@tailwind components;
	@tailwind utilities;
</style>
